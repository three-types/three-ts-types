{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base", "group:allNonMajor", "schedule:monthly", ":maintainLockFilesMonthly"],
    "rangeStrategy": "bump",
    "postUpdateOptions": ["yarnDedupeHighest"],
    "rebaseWhen": "conflicted",
    "packageRules": [
        {
            "matchPackageNames": ["prettier"],
            "matchUpdateTypes": ["major", "minor", "patch"],
            "groupName": "prettier"
        },
        {
            "matchPackageNames": ["@tweenjs/tween.js"],
            "matchUpdateTypes": ["major", "minor"],
            "enabled": false
        },
        {
            "matchPackageNames": ["fflate"],
            "matchUpdateTypes": ["major", "minor"],
            "enabled": false
        },
        {
            "matchPackageNames": ["meshoptimizer"],
            "matchUpdateTypes": ["major", "minor"],
            "enabled": false
        },
        {
            "matchPackageNames": ["@dimforge/rapier3d-compat"],
            "matchUpdateTypes": ["major", "minor"],
            "enabled": false
        },
        {
            "matchPackageNames": ["@needle-tools/gltf-progressive"],
            "matchUpdateTypes": ["major", "minor"],
            "enabled": false
        },
        {
            "matchPackageNames": ["@needle-tools/three-animation-pointer"],
            "matchUpdateTypes": ["major", "minor"],
            "enabled": false
        },
        {
            "matchPackageNames": ["3d-tiles-renderer"],
            "matchUpdateTypes": ["major", "minor"],
            "enabled": false
        }
    ]
}
